<div class="container">
  <h1>The other Hacker News</h1>
  <a href= "/users">login</a>
</div>


<div class="entry">
  <br>

  <%if @post%>
    <% @post.each do |post| %>
      <%= post.id %> <a href=<%= post.url %>><%= post.title %></a> (<%= post.url %>) <br>
      by <a href="/posts/<%= post.user_id %>"><%= post.user.name %></a> at <% t = (Time.now - post.created_at) %>
              <% if t < 3600 %>
                <%= (t / 60).round %> minutes ago
              <% elsif t > 3600 && t < 86400 %>
                about <%= (t / (60 * 60)).round %> hours ago
              <% elsif t > 86400  && t < 129600 %>
                1 day ago
              <% else t > 129600 %>
                about <%= (t/ (60*60*24)).round %> days ago
              <% end %> |
        <a href="/comments/<%= post.id %>"><%= post.comments.count %>comments</a>
      <br><br>
    <% end %>
  <% end %>
</div>





